{
  "name": "omnia-oms",
  "version": "1.0.0",
  "description": "Omnia Order Management System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "seed": "knex seed:run",
    "lint": "eslint src/ database/",
    "lint:fix": "eslint src/ database/ --fix",
    "typecheck": "echo 'No TypeScript configured'",
    "docker:build": "docker build -t omnia-oms .",
    "docker:run": "docker run -p 3000:3000 omnia-oms"
  },
  "dependencies": {
    "express": "^4.18.2",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "kafkajs": "^2.2.4",
    "ioredis": "^5.3.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.49.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "order-management",
    "azure",
    "postgresql",
    "kafka",
    "microservices"
  ],
  "author": "Omnia Team",
  "license": "PROPRIETARY"
}